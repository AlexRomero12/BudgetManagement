@model AccountType
@{
    ViewData["Title"] = "Delete account type";
}

<h3 class="mb-3">Are you sure to delete the account type @Model.Name?</h3>

<form asp-action="DeleteAccountType">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
